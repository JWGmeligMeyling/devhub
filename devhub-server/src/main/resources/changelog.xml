<?xml version="1.0" encoding="UTF-8"?>

<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
	xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.0.xsd
        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

	<changeSet id="create_users_table" author="Michael de Jong">
		<createTable tableName="users">
			<column name="id" type="bigint" autoIncrement="true">
				<constraints primaryKey="true" nullable="false" />
			</column>
			<column name="student_number" type="varchar(16)">
				<constraints nullable="true" unique="true" />
			</column>
		</createTable>
	</changeSet>

	<changeSet id="create_projects_table" author="Michael de Jong">
		<createTable tableName="projects">
			<column name="id" type="bigint" autoIncrement="true">
				<constraints primaryKey="true" nullable="false" />
			</column>
			<column name="name" type="varchar(16)">
				<constraints nullable="false" unique="true" />
			</column>
		</createTable>
	</changeSet>

	<changeSet id="create_groups_table" author="Michael de Jong">
		<createTable tableName="groups">
			<column name="project_id" type="bigint">
				<constraints primaryKey="true" nullable="false" />
			</column>
			<column name="group_id" type="bigint">
				<constraints primaryKey="true" nullable="false" />
			</column>
		</createTable>
		<addForeignKeyConstraint constraintName="project_ref_in_groups"
			baseTableName="groups" baseColumnNames="project_id"
			referencedTableName="projects" referencedColumnNames="id" />
	</changeSet>

	<changeSet id="create_groupmemberships_table" author="Michael de Jong">
		<createTable tableName="group_memberships">
			<column name="project_id" type="bigint">
				<constraints primaryKey="true" nullable="false" />
			</column>
			<column name="group_id" type="bigint">
				<constraints primaryKey="true" nullable="false" />
			</column>
			<column name="user_id" type="bigint">
				<constraints primaryKey="true" nullable="false" />
			</column>
		</createTable>
		<addForeignKeyConstraint constraintName="project_and_group_ref_in_groupmemberships"
			baseTableName="group_memberships" baseColumnNames="project_id,group_id"
			referencedTableName="groups" referencedColumnNames="project_id,group_id" />
		<addForeignKeyConstraint constraintName="user_ref_in_groupmemberships"
			baseTableName="group_memberships" baseColumnNames="user_id"
			referencedTableName="users" referencedColumnNames="id" />
	</changeSet>
	
</databaseChangeLog>
